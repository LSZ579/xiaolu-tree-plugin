.box_sizing {
  box-sizing: border-box;
}
.btn {
  position: fixed;
  bottom: 0;
  padding: 10px;
  background-color: #fff;
  width: 100%;
}
.btn .sureBtn {
  background-color: #0095F2;
  color: #fff;
}
.content-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content-item .person {
  height: 64rpx;
  min-width: 64rpx;
  border-radius: 50%;
  border: 1rpx solid rgba(0, 149, 235, 0.15);
  background-color: rgba(0, 149, 235, 0.1);
  margin-left: 0px;
  color: #0095F2;
  line-height: 64rpx;
  font-size: 22rpx;
  text-align: center;
  margin-left: 20rpx;
}
.content-item .word {
  margin-left: 16rpx;
  font-size: 30rpx;
  color: #5b5757;
  width: 500rpx;
  word-break: break-all;
}

